@model hrr.Models.Educations
<form method="post" action="/Home/EditEducations">
    <input type="text" id="inputID" name="ID" value="@Model.ID" readonly class="form-control" />
    <legend>學歷</legend>
    <div class="form-row">
        <div class="form-group col-4">
            <label for="inputPassword4">學位</label>
            <input type="text" name="Degree"value="@Model.Degree" class="form-control degree">
        </div>
        <div class="form-group col-4">
            <label for="inputPassword4">學校</label>
            <input type="text" name="School"value="@Model.School" class="form-control school">
        </div>
        <div class="form-group col-4">
            <label for="inputPassword4">畢業科系</label>
            <input type="text" name="Department"value="@Model.Department" class="form-control department">
        </div>
    <button type="submit" class="btn btn-primary">編輯</button>
    <input type="reset" class="btn btn-warning " value="重置">
</form>