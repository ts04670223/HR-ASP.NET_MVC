@model hrr.Models.Experiences
<form method="post" action="/Home/EditExperiences">
    <input type="text" id="inputID" name="ID" value="@Model.ID" readonly class="form-control" />
    <div>
        <h3>二、經歷</h3>
    </div>
    <div class="form-row">
        <div class="form-group col-2">
            <label for="inputPassword4">服務單位</label>
            <input type="text" name="ServiceUnit"value="@Model.ServiceUnit" class="form-control">
        </div>
        <div class="form-group col-2">
            <label for="inputPassword4">職稱</label>
            <input type="text" name="Title"value="@Model.Title" class="form-control">
        </div>
        <div class="form-group col-4">
            <label for="inputPassword4">工作內容</label>
            <input type="text" name="JobDescription"value="@Model.JobDescription" class="form-control">
        </div>
        <div class="form-group col-2">
            <label for="inputPassword4">起</label>
            <input type="date" name="Start"value="@Model.Start" class="form-control">
        </div>
        <div class="form-group col-2">
            <label for="inputPassword4">迄</label>
            <input type="date" name="Finish"value="@Model.Finish" class="form-control">
        </div>
    <button type="submit" class="btn btn-primary">編輯</button>
    <input type="reset" class="btn btn-warning " value="重置">
</form>